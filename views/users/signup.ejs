<% layout('layouts/boilerplate') %>

<div class="row mt-3">
  <h1 class="col-6 offset-3">SignUp for Wanderlust</h1>
  <div class="col-8 offset-2">
    <form method="POST" action="/signup" class="needs-validation" novalidate>
      <div class="mb-3">
        <label for="username" class="form-label">Username</label>
        <input
          name="username"
          class="form-control"
          type="text"
          id="username"
          required
        />
        <div class="valid-feedback">Looks Good!</div>
      </div>

      <div class="mb-3">
        <label for="email" class="form-label">Email</label>
        <input
          name="email"
          class="form-control"
          type="email"
          id="email"
          required
        />
        <div class="valid-feedback">Looks Good!</div>
      </div>

      <div class="mb-3">
        <label for="password" class="form-label">Password</label>
        <input
          name="password"
          class="form-control"
          type="password"
          id="password"
          required
        />

      <button type="submit" class="btn btn-success mt-3">Sign Up</button>
    </form>
  </div>
</div>
